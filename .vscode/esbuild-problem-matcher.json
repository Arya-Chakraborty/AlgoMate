{
    "problemMatcher": [
        {
            "owner": "esbuild",
            "pattern": [
                {
                    "regexp": "^> (.*):(\\d+):(\\d+): (ERROR|WARNING): (.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            ],
            "background": {
                "activeOnStart": true,
                "beginsPattern": "^> .*$",
                "endsPattern": "^\\s*$"
            }
        }
    ]
}
